<Window x:Class="TeamProgect.SPEED"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamProgect"
        mc:Ignorable="d"
        Title="SPEED" Height="250" Width="400">
    <Window.Resources>
        <!-- Градиент для фона -->
        <LinearGradientBrush  Opacity="0.9" x:Key="MyGradient" StartPoint="0,0" EndPoint="1,2">
            <GradientStop Color="#FFAAAAAA" Offset="0.0"/>
            <GradientStop Color="#FF7B68EE" Offset="0.75"/>
            <GradientStop Color="#FF483D8B" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource MyGradient}">
        <StackPanel >
        <Button  FontSize="20" Foreground="#FFA9A9A9" FontStretch="Medium" FontFamily="Constantia" HorizontalAlignment="Center" VerticalAlignment="Center" Content="SLOW" Opacity="0.8" Background="#FF483D8B" Width="170" Margin="0 30 0 0" Height="50"/>
        <Button  FontSize="20" Foreground="#FFA9A9A9" FontStretch="Medium" FontFamily="Constantia" HorizontalAlignment="Center" VerticalAlignment="Center" Content="NORMAL" Opacity="0.8" Background="#FF483D8B" Width="170" Margin="0 10 0 0" Height="50"/>
        <Button  FontSize="20" Foreground="#FFA9A9A9" FontStretch="Medium" FontFamily="Constantia" HorizontalAlignment="Center" VerticalAlignment="Center" Content="FAST" Opacity="0.8" Background="#FF483D8B" Width="170" Margin="0 10 0 0" Height="50"/>
    </StackPanel>
        <Image Opacity="0.8" Panel.ZIndex="-1" Source="/IMAGES/sticker-png-black-and-white-flower-watercolor-painting-black-and-white-leaf-monochrome-animal-jam-clans-desktop-branch.png" RenderTransformOrigin="0.5,0.5" Margin="-98,-96,-234,-81">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-22.124"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Opacity="0.7" Panel.ZIndex="-1" Source="/IMAGES/sticker-png-black-and-white-flower-watercolor-painting-black-and-white-leaf-monochrome-animal-jam-clans-desktop-branch.png" Margin="-114,-22,88,-68" RenderTransformOrigin="0.5,0.5" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="140.531"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
