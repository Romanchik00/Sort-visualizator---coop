<Window x:Class="TeamProgect.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamProgect"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <!-- Градиент для фона -->
        <LinearGradientBrush  Opacity="0.9" x:Key="MyGradient" StartPoint="0,0" EndPoint="1,2">
            <GradientStop Color="#FFAAAAAA" Offset="0.0"/>
            <GradientStop Color="#FF7B68EE" Offset="0.75"/>
            <GradientStop Color="#FF483D8B" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource MyGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <Border Margin="10 10 10 10" Grid.Row="0" BorderBrush="#FF7B68EE" CornerRadius="40" BorderThickness="3">
            <StackPanel  Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <TextBlock Margin="0 0 40 0" TextAlignment="Center" Text="Сгенерировать данные автоматически." FontSize="25" Foreground="White" FontStretch="Medium" FontFamily="Constantia" Width="450" Height="40"/>
                <TextBlock TextWrapping="Wrap" Margin="0 0 40 0" TextAlignment="Center" Text="Ваши данные будут сгенерированы автоматичекски случайным образом." FontSize="15" Foreground="White" FontStretch="Medium" FontFamily="Constantia" Width="400" Height="50"/>
                </StackPanel>
                <Button  FontSize="20" Foreground="#FFA9A9A9" FontStretch="Medium" FontFamily="Constantia" HorizontalAlignment="Center" VerticalAlignment="Center" Content="GENERATE" Opacity="0.8" Background="#FF483D8B" Width="170" Margin="0 10 0 0" Height="50"/>
            </StackPanel>
        </Border>
        <Border Margin="10 10 10 10" Grid.Row="1" BorderBrush="#FF7B68EE" CornerRadius="40" BorderThickness="3">
            <StackPanel  Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical" Width="505">
                    <TextBlock Margin="0 0 0 0" TextAlignment="Center" Text="Вписать в ручную." FontSize="25" Foreground="White" FontStretch="Medium" FontFamily="Constantia" Width="450" Height="40"/>
                    <RichTextBox  Foreground="#FFA9A9A9" Margin="0 0 0 0" Width="290" Height="90" FontSize="15" FontFamily="Constantia" FontStretch="Medium" Background="{x:Null}" BorderBrush="White" />
                </StackPanel>
                <Button  FontSize="20" Foreground="#FFA9A9A9" FontStretch="Medium" FontFamily="Constantia" HorizontalAlignment="Center" VerticalAlignment="Center" Content="ADD" Opacity="0.8" Background="#FF483D8B" Width="170" Margin="0 10 0 0" Height="50"/>
            </StackPanel>
        </Border>
        <Image Opacity="0.6" Panel.ZIndex="-1" Source="/IMAGES/png-clipart-watercolor-painting-graphics-leaf-green-painting-watercolor-painting-leaf.png" Margin="234,0,-325,63" Grid.RowSpan="2"/>
        <Image Opacity="0.4" Panel.ZIndex="-1" Source="/IMAGES/png-clipart-watercolor-painting-graphics-leaf-green-painting-watercolor-painting-leaf.png" Margin="-313,58,248,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-178.843"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
